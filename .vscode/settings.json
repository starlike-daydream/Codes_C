    "code-runner.executorMap":{
        // "cpp" :"cd $dir && g++ $fileName -O3 -o D:\\Codes_C\\output\\$fileNameWithoutExt && D:\\Codes_C\\output\\$fileNameWithoutExt",
        // "cpp" :"cd $dir && g++ $fileName -O3 -o D:\\Codes_C\\output\\$fileNameWithoutExt && D:\\Codes_C\\output\\test.exe",
        "cpp" :"cd $dir && g++ $fileName -std=c++14 -O3 -pipe -Wall -Wextra -Wconversion -fstack-protector -fexec-charset=GBK -o D:\\Codes_C\\output\\test.exe && D:\\Codes_C\\output\\test.exe", //TODO C++语言文件的运行指令，我这里开了O3优化，运行速度更快
        // "c" :"cd $dir && gcc $fileName -O3 -fexec-charset=GBK -o D:\\Codes_C\\output\\$fileNameWithoutExt.exe && D:\\Codes_C\\output\\$fileNameWithoutExt.exe"
        "c" :"cd $dir && gcc $fileName -O3 -fexec-charset=GBK -o D:\\Codes_C\\output\\test.exe && D:\\Codes_C\\output\\test.exe"
        // "c" :"cd $dir && g++ $fileName -O3 -o D:\\Codes_C\\output\\$fileNameWithoutExt && D:\\Codes_C\\output\\test.exe" //TODO C语言文件的运行指令
    },
    "C_Cpp.errorSquiggles": "disabled",
    "code-runner.preserveFocus": false,     // 若为false，run code后光标会聚焦到终端上。如果需要频繁输入数据可设为false
    "code-runner.clearPreviousOutput": false, // 每次run code前清空属于code runner的终端消息，默认false
    "code-runner.ignoreSelection": true,   // 默认为false，效果是鼠标选中一块代码后可以单独执行，但C是编译型语言，不适合这样用
    "code-runner.fileDirectoryAsCwd": false, // 将code runner终端的工作目录切换到文件目录再运行，对依赖cwd的程序产生影响；如果为false，executorMap要加cd $dir
    "files.defaultLanguage": "cpp", // ctrl+N新建文件后默认的语言
    "editor.formatOnType": true,  // 输入分号(C/C++的语句结束标识)后自动格式化当前这一行的代码
    "editor.suggest.snippetsPreventQuickSuggestions": false, // clangd的snippets有很多的跳转点，不用这个就必须手动触发Intellisense了
    "editor.acceptSuggestionOnEnter": "on", // 我个人的习惯，按回车时一定是真正的换行，只有tab才会接受Intellisense ----!我改掉了，off改回去
    // "editor.snippetSuggestions": "top", // （可选）snippets显示在补全列表顶端，默认是inline

    "code-runner.runInTerminal": true, // 设置成false会在“输出”中输出，无法输入
}